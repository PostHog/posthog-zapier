{
    "name": "posthog-zapier",
    "version": "2.0.0",
    "description": "Zapier integration for PostHog.",
    "private": true,
    "license": "MIT",
    "main": "index.js",
    "scripts": {
        "clean": "rimraf ./lib ./build",
        "build": "npm run clean && tsc",
        "watch": "npm run clean && tsc --watch",
        "test": "npm run build && jest --testTimeout 10000 --rootDir ./lib/test",
        "push": "npm run build && zapier test && zapier push && node postpush",
        "format": "prettier . --write"
    },
    "dependencies": {
        "zapier-platform-core": "12.0.3"
    },
    "devDependencies": {
        "@types/jest": "^26.0.13",
        "@types/node": "^13.13.5",
        "husky": "^4.2.5",
        "jest": "^26.4.2",
        "lint-staged": "^10.3.0",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.2.0",
        "zapier-platform-cli": "12.0.3"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,json}": "prettier --write",
        "*.ts": "tsc --noEmit"
    }
}
